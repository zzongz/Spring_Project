<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="main" template="/WEB-INF/views/main/main.jsp" preparer="menuPreparer">
        <put-attribute name="header" value="/WEB-INF/views/main/header.jsp"></put-attribute>
        <put-attribute name="body" value="/WEB-INF/views/main/body.jsp"></put-attribute>
    </definition>

    <definition name="*" extends="main">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"></put-attribute>
    </definition>
    <definition name="*/*" extends="main">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
    </definition>
    <definition name="*/*/*" extends="main">
        <put-attribute name="body" value="/WEB-INF/{1}/{2}/{3}.jsp"></put-attribute>
    </definition>
</tiles-definitions>
